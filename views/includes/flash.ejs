<!-- success alert -->
<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show cols-6 " role="alert">
        <%= success %>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
<% } %>

<!-- error alert -->
<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show cols-6 " role="alert">
        <%= error %>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
<% } %>
