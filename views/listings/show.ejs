<% layout("./layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><%= listing.title %></h3>
    </div>        
    <div class="card col-6 offset-2 show-card"  >
        <img 
            src="<%= listing.image %>" 
            class="card-img-top show-img" 
            alt="Image"
        >
        <div class="card-body">
            <p class="card-text">
                description : <%=listing.description%> <br>
                price : &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
                location : <%=listing.location%> <br>
                country : <%=listing.country%> <br>
            </p>
        </div>
    </div>    
    <br>
    <div class="btns md-5">
        <a 
            class="btn btn-dark col-1 offset-2" 
                href="/listings/<%=listing._id%>/edit">edit
        </a>
        <a 
            class="btn btn-dark offset-1" 
                href="/listings/<%=listing._id%>/delete">
                delete
        </a>
    </div>
</div>
