<% layout("./layouts/boilerplate") %>

<div class="row mt-3">
    <h3>Listing detail</h3>
    <div class="col offset-2">
        <div class="card col-7">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="Image">
            <div class="card-body">
                <p class="card-text">
                    <b>title : <%= listing.title %></b> <br>
                    description :<%=listing.description%> <br>
                    price : &#8377; <%=listing.price.toLocaleString("en-IN")%> <br>
                    location :<%=listing.location%> <br>
                    country :<%=listing.country%> <br>
                </p>
            </div>
        </div>
    </div>
    
    <div class="col-1">
        <button><a class="btn btn-dark" href="/listings/<%=listing._id%>/edit">edit</a></button>
    </div>

    <div class="col-2">
        <form action="/listings/<%=listing._id%>?_method=DELETE">
            <button>delete</button>
        </form>
        <!-- <button><a class="btn btn-dark" href="/listings/<%=listing._id%>/delete">delete</a></button> -->
    </div>

    
</div>

