<% layout("./layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><%= listing.title %></h3>
    </div>        
    <div class="card col-6 offset-2 show-card"  >
        <img 
            src="<%= listing.image %>" 
            class="card-img-top show-img" 
            alt="Image"
        >
        <div class="card-body mt-3">
            <p class="card-text">
                <strong>Description:</strong>
                <span class="text-primary"><%= listing.description %></span>
            </p>
            <p class="card-text">
                <strong>Price:</strong>
                <span class="text-success">&#8377; <%= listing.price.toLocaleString("en-IN") %></span>
            </p>
            <p class="card-text">
                <strong>Location:</strong>
                <span class="text-info"><%= listing.location %></span>
            </p>
            <p class="card-text">
                <strong>Country:</strong>
                <span class="text-secondary"><%= listing.country %></span>
            </p>
        </div>
    </div>   
    
    <br>
    
    <div class="btns md-5 ">
        <a 
            class="btn btn-dark col-1 offset-2" 
                href="/listings/<%=listing._id%>/edit">edit
        </a>
        <a 
            class="btn btn-dark offset-1" 
                href="/listings/<%=listing._id%>/delete">
                delete
        </a>
    </div>
    
    <div>
    <hr class="mt-3">
        <form class="col-8 offset-2" action="/listings/<%=listing._id%>/reviews" method="POST">
            <h4>Please Review</h4>
            <div>
                <label for="rating" class="form-label"></label>
                <input name="review[rating]" type="range" min="1" max="5" id="rating" class="form-range">
            </div>
            <div class="md-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea  class="form-control" name="review[comment]" id="comment" cols="30" rows="5"></textarea>
            </div>
                <button class="btn btn-dark mt-3 ">Submit Review</button>
        </form>    
    </div>
</div>
