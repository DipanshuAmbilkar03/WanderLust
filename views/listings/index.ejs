<% layout("./layouts/boilerplate") %> <%= success %>

<h1>All Listings</h1>
    <!-- <form method="GET" action="listings/new" >
        <button>Create new Listings</button>
    </form> -->

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListing) { %>
        <a href="/listings/<%= listing._id %>" class="linking-link">
            <div class="card col listing-card">
                <img src="<%= listing.image %>" 
                class="card-img-top" alt="listings" 
                style="height: 20rem;">

                <!-- card image overlay -->
                <div class="card-img-overlay">20% OFF</div>
                <div class="card-body">
                    <p class="card-text">
                    <b>Title : <%= listing.title %></b>
                    <br>
                    Price : &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
                </p>
            </div>
        </div>
        </a>
    <% } %>
</div>
